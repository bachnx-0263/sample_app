<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
       <%=t "error.description_html" %>
       <%= t "error.count", count: @user.errors.count %>.
    </div>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
