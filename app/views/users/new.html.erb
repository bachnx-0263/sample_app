<% provide :title, t("signup.button") %>
<h1><%= t("signup.button")%></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path do |f| %>
      <%= render "shared/error_messages" %>
      <%= f.label :name, t("form.name") %>
      <%= f.text_field :name %>
      <%= f.label :email, t("form.email") %>
      <%= f.email_field :email %>
      <%= f.label :password, t("form.password") %>
      <%= f.password_field :password %>
      <%= f.label :password_confirmation, t("form.confirmation") %>
      <%= f.password_field :password_confirmation %>
      <%= f.submit t("form.submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
